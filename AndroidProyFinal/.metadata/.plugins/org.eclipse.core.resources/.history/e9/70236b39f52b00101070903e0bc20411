package adapspand.proyfinal.billete;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import adapspand.proyfinal.ruta.Ruta;
import adapspand.proyfinal.ruta.RutaRepository;
import jakarta.persistence.EntityNotFoundException;

@Service
public class BilleteService {
	private final BilleteRepository billeteRepo;
    private final RutaRepository rutaRepo;

    public BilleteService(BilleteRepository billeteRepo, RutaRepository rutaRepo) {
        this.billeteRepo = billeteRepo;
        this.rutaRepo    = rutaRepo;
    }

    @Transactional
    public Billete crearBillete(Long rutaId, int precio) {
        Ruta ruta = rutaRepo.findById(rutaId)
            .orElseThrow(() -> new EntityNotFoundException("Ruta no encontrada: " + rutaId));

        Billete billete = new Billete();
        billete.setPrecio(precio);
        billete.setRuta(ruta);
        billete.setOrigen(ruta.getOrigen());
        billete.setDestino(ruta.getDestino());

        return billeteRepo.save(billete);
    }
}
