package adapspand.proyfinal.parada;

import java.util.ArrayList;
import java.util.List;

import com.fasterxml.jackson.annotation.JsonBackReference;

import adapspand.proyfinal.linea.Linea;
import adapspand.proyfinal.ruta.Ruta;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.FetchType;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.ManyToMany;
import jakarta.persistence.OneToMany;
import jakarta.persistence.Table;

@Entity
@Table(name = "parada")
public class Parada {
	
	@Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;
	
	@Enumerated(EnumType.STRING)
    private Estaciones nombre;
	
	public boolean esOrigen;
	
	@OneToMany(mappedBy = "origen", fetch = FetchType.LAZY)
	@JsonBackReference 
    private List<Ruta> rutasComoOrigen = new ArrayList<>();

	
	public boolean esDestino;
	
	@OneToMany(mappedBy = "destino", fetch = FetchType.LAZY)
    private List<Ruta> rutasComoDestino = new ArrayList<>();

	public boolean esIntermedio;
	
	@ManyToMany(mappedBy = "recorrido", fetch = FetchType.LAZY)
	private List<Ruta> rutas = new ArrayList<>();
	
	@ManyToMany(mappedBy = "paradas", fetch = FetchType.LAZY)
	private List<Linea> lineas = new ArrayList<>();
	
	@ManyToMany(mappedBy = "recorrido", fetch = FetchType.LAZY)
	private List<Ruta> rutasDondeAparece;

	public Parada() {
		super();
	}

	public Parada(Long id, Estaciones nombre) {
		super();
		this.id = id;
		this.nombre = nombre;
	}

	public Estaciones getNombre() {
		return nombre;
	}

	public void setNombre(Estaciones estacion) {
		this.nombre = estacion;
	}

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public boolean isEsOrigen() {
		return esOrigen;
	}

	public void setEsOrigen(boolean esOrigen) {
		this.esOrigen = esOrigen;
	}

	public List<Ruta> getRutasComoOrigen() {
		return rutasComoOrigen;
	}

	public void setRutasComoOrigen(List<Ruta> rutasComoOrigen) {
		this.rutasComoOrigen = rutasComoOrigen;
	}

	public boolean isEsDestino() {
		return esDestino;
	}

	public void setEsDestino(boolean esDestino) {
		this.esDestino = esDestino;
	}

	public List<Ruta> getRutasComoDestino() {
		return rutasComoDestino;
	}

	public void setRutasComoDestino(List<Ruta> rutasComoDestino) {
		this.rutasComoDestino = rutasComoDestino;
	}

	public boolean isEsIntermedio() {
		return esIntermedio;
	}

	public void setEsIntermedio(boolean esIntermedio) {
		this.esIntermedio = esIntermedio;
	}

	public List<Ruta> getRutas() {
		return rutas;
	}

	public void setRutas(List<Ruta> rutas) {
		this.rutas = rutas;
	}

	public List<Linea> getLineas() {
		return lineas;
	}

	public void setLineas(List<Linea> lineas) {
		this.lineas = lineas;
	}

	public List<Ruta> getRutasDondeAparece() {
		return rutasDondeAparece;
	}

	public void setRutasDondeAparece(List<Ruta> rutasDondeAparece) {
		this.rutasDondeAparece = rutasDondeAparece;
	}
}
